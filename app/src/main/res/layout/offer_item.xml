<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/offer_item_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEDEE"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/offer_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IntitulÃ© de l'offre"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/offer_item_entreprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom Entreprise"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textColor="#525252"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/offer_item_ville"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ville"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="#525252"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/offer_item_voir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#070052"
                    android:layout_gravity="end"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>